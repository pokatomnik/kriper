{
  "lock": false,
  "compilerOptions": {
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "useUnknownInCatchVariables": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "experimentalDecorators": false
  },
  "lint": {
    "files": {
      "include": ["."]
    },
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-empty-interface", "ban-types"]
    }
  },
  "fmt": {
    "files": {
      "include": ["."]
    },
    "options": {
      "useTabs": false,
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": false,
      "proseWrap": "preserve"
    }
  },
  "test": {
    "files": {
      "include": ["."]
    }
  },
  "tasks": {
    "test:unit:coverage": "deno test --allow-read --allow-write --coverage=./.coverage",
    "test:covreport": "deno coverage ./.coverage",

    "test:unit": "deno test --allow-read --allow-write",
    "test:check": "deno check ./bootstrap.ts",
    "test:lint": "deno lint",
    "test": "deno task test:unit && deno task test:check && deno task test:lint",

    "start": "deno task clean && deno run --allow-read --allow-write --allow-net ./bootstrap.ts | tee ./last-run.log",

    "clean": "sh ./clean-out.sh"
  },
  "imports": {
    "denodom": "https://deno.land/x/deno_dom@v0.1.35-alpha/deno-dom-wasm.ts",
    "testing": "https://deno.land/std@0.154.0/testing/asserts.ts",
    "chalkin": "https://deno.land/x/chalkin@v0.1.3/mod.ts",
    "microdi": "https://deno.land/x/microdi@v1.0.0/mod.ts",
    "domain/": "./src/domain/",
    "lib/": "./src/lib/",
    "services/": "./src/services/"
  }
}
